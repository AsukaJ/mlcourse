\begin_inset Formula 
\begin{eqnarray*}
p(y,\theta) & = & \exp\left(y\theta-e^{\theta}-\log\left(y!\right)\right)\\
\pause & = & \frac{1}{y!}\frac{1}{e^{e^{\theta}}}\exp\left(y\theta\right),
\end{eqnarray*}

\end_inset

