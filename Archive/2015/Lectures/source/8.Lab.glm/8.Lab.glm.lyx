\begin_inset Formula 
\begin{eqnarray*}
p(y;\lambda) & = & \exp\left(y\log\lambda-\lambda-\log\left(y!\right)\right).
\end{eqnarray*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Pause

\end_layout

\end_deeper
\begin_layout Itemize
